<% include ../partial-pages/master.ejs %>
<main>
    <div>
        <div class="row" id="divBayiler">
            <div class="col s12">
                <div class="card-panel">
                   <form id="frmBayiler" action="/bayiler/ekle" method="post">
                   <input style="display:none;" value="<%=session.kullanici.kullaniciKodu%>" name="kullaniciKodu" >
                    <div class="row" id="divBayi">
                       <div class="row">
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctBayiTuru" name="bayiTuru">
                                  <option value="" disabled selected>Bayi \ Servisler Seç</option>
                                  <option value="Bayi">Bayi</option>
                                  <option value="Servisler">Servisler</option>
                                  <option value="Bayi ve Servisler">Bayi ve Servisler</option>
                                </select>
                            </div>
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctUlke" name="ulkeAdi">
                                  <option value="" disabled selected>Ülke Seç</option>
                                  <option value="Türkiye">Türkiye</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctSehir" name="ilAdi">
                                  <option value="" disabled selected>İl Seç</option>
                                  <option value="İzmir">İzmir</option>
                                  <option value="İstanbul">İstanbul</option>
                                  <option value="Ankara">Ankara</option>
                                </select>
                            </div>
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctİlce" name="ilceAdi">
                                  <option value="" disabled selected>İlçe Seç</option>
                                  <option value="Buca">Buca</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpAd" type="text" class="validate" name="ad" placeholder="bayi Adı">
                                  
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpAdres" type="text" class="validate" name="adres">
                                  <label for="">Bayi Adresi</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpTel" type="number" class="validate" name="tel">
                                  <label for="">Telefon</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpFax" type="number" class="validate" name="fax">
                                  <label for="">Fax</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpEmail" type="email" class="validate" name="email" >
                                  <label for="">E-mail</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpWeb" type="text" class="validate" name="web">
                                  <label for="">Web</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="txtAciklama" class="materialize-textarea" name="aciklama"></textarea>
                                <label for="text">Açıklama</label>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="right-align">
                                <button id="btnEkle" class="waves-effect waves-light btn" type="submit">Ekle</button>
                            </div>
                        </div>
                    </div>
                  </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="card-panel">
                    <div class="row">
                        <table class="bordered bayilerTable">
                            <thead>
                              <tr>
                                  <th data-field="id" style="width:50px;">#</th>
                                  <th data-field="name">Bayi</th>
                                  <th data-field="item_name">İl</th>
                                  <th data-field="item_name">İlçe</th>
                                  <th data-field="item_name">Ad</th>
                                  <th data-field="item_name">Adres</th>
                                  <th data-field="item_name">Telefon</th>
                                  <th data-field="item_name">Fax</th>
                                  <th data-field="item_name">Mail</th>
                                  <th data-field="item_name">Web</th>
                                  <th data-field="operation" style="width:180px;">İşlemler</th>
                              </tr>
                            </thead>

                            <tbody>
                               <%for(var i=0;i<bayiler.length;i++){%>
                                   <tr id='<%=bayiler[i]._id%>'>
                                       <td><%=i+1%>.</td>
                                       <td><%=bayiler[i].bayiTuru%></td>
                                       <td><%=bayiler[i].ilAdi%></td>
                                       <td><%=bayiler[i].ilceAdi%></td>
                                       <td><%=bayiler[i].ad%></td>
                                       <td><%=bayiler[i].adres%></td>
                                       <td><%=bayiler[i].tel%></td>
                                       <td><%=bayiler[i].fax%></td>
                                       <td><%=bayiler[i].email%></td>
                                       <td><%=bayiler[i].web%></td>
                                       <td id="<%=bayiler[i]._id%>" >
                                         <button class="btn btn-floating red tooltipped sil"  data-position="top" data-delay="50" data-tooltip="Sil"><i class="mdi-action-delete"></i></button>
                                        <button class="btn btn-floating green tooltipped guncelle"  data-position="top" data-delay="50" data-tooltip="Değiştir"><i class="mdi-av-replay"></i></button>
                                       </td>
                                    </tr>
                               <%}%>
                            </tbody>
                        </table>
                  </div>

                </div>
            </div>
        </div>
    </div>
    
</main>
<% include ../js/lib-js/masterPageScripts.js %>

<script src="../js/lib-js/bayiler.js"></script>
