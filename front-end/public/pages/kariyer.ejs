<% include ../partial-pages/master.ejs %>
<main>
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6 <%if(!kurumsalIzinler.kariyer.ikPolitikasi){%>disabled<%}%>"><a href="#ik">İK Politikası</a></li>
                <li class="tab col s6 <%if(!kurumsalIzinler.kariyer.isVeStaj){%>disabled<%}%>"><a class="" href="#is_ve_staj">İş ve Staj </a></li>
            </ul>
        </div>
    </div>
    <div id="ik" class="col s12" style="padding:0;">
        <div class="row">
            <div class="col s12">
                <div class="card-panel">
                    <div class="row">
                    <input id="inpKullaniciKodu" style="display:none;" value="<%=session.kullanici.kullaniciKodu%>">
                    <div class="row">
                        <div class="col m6 offset-m3 no-padding">
                            <div class="card-panel">
                                      <div class="">
                                          <table class="">
                                                <tbody>
                                                    <tr>
                                                        <td class="center-align">
                                                            <div class="" style="padding:0">
                                                                <div class="" style="padding:0">
                                                                    <div class="card-image">
                                                                        <img id="imgUstResim" width="100%" height="130px;" class="materialboxed" src="/images/default.png">
                                                                    </div>
                                                                    <div class="card-action ">
                                                                        <a href="Javascript:void(0)" class="ustResimSil" style="color:red">Sil</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                  </div>
                        </div>
                    </div>
                    <div class="col m12 no-padding">
                        <form id="formUstResim" action="/yukle/medyayukle" enctype="multipart/form-data" method="post">
                            <div class="col s11">
                                <div class="file-field input-field">
                                    <input placeholder="ürün ust resim sec" class="file-path validate ustResim" type="text"/>
                                    <input id="inpUstResim" type="file" name="medyaListesi"/>
                                </div>
                            </div>
                            <div class="col s1">
                                <div class="input-field">
                                    <button type="submit" id="btnUstResimYukle" class="btn btn-floating blue tooltipped"  data-position="top" data-delay="50" data-tooltip="Secili ogeyi yukle"><i class="mdi-file-cloud-upload"></i></button>
                                </div>
                            </div>
                          </form>
                    </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="txtAciklama" class="materialize-textarea" placeholder="Açıklama" <%if(!kurumsalIzinler.kariyer.ikPolitikasi){%>disabled<%}%>></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="right-align">
                                <a id="btnEkle" class="waves-effect waves-light btn" <%if(!kurumsalIzinler.kariyer.ikPolitikasi){%>disabled<%}%>>Ekle</a>
                                <a id="btnGuncelle" style="display:none;" class="waves-effect waves-light btn" <%if(!kurumsalIzinler.kariyer.ikPolitikasi){%>disabled<%}%>>Güncelle</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="card-panel">
                    <div class="row">
                        <table class="bordered ikPolitikasiTable">
                            <thead>
                              <tr>
                                  <th data-field="id" style="width:50px;">#</th>
                                  <th data-field="item_name">Resim</th>
                                  <th data-field="item_name">Açıklama</th>
                                  <th data-field="operation" style="width:180px;">İşlemler</th>
                              </tr>
                            </thead>

                            <tbody>
                             <%for(var i=0;i<ikPolitikasi.length;i++){%>
                               <tr id="<%=ikPolitikasi[i]._id%>">
                                <td><%=i+1%></td>
                                <td>
                                    <img class="responsive-img materialboxed" width="50px" height="50px" src="<%=ikPolitikasi[i].ustResim%>" style="height:50px; width:50px;">
                                </td>
                                <td><%=ikPolitikasi[i].aciklama%></td>
                                <td id="<%=ikPolitikasi[i]._id%>">
                                    <button class="btn btn-floating red tooltipped sil"  data-position="top" data-delay="50" data-tooltip="Sil"><i class="mdi-action-delete"></i></button>
                                    <button class="btn btn-floating green tooltipped guncelle"  data-position="top" data-delay="50" data-tooltip="Değiştir"><i class="mdi-av-replay"></i></button>
                                </td>
                            </tr>
                           <%}%>
                            </tbody>
                        </table>
                  </div>

                </div>
            </div>
        </div>
    </div>
    <div id="is_ve_staj" class="col s12" style="padding:0;">
        <div class="row">
            <div class="col s12">
                <div class="card-panel">
                    <div class="row">
                        <table class="bordered isStajTable">
                            <thead>
                                <tr>
                                      <th data-field="id" style="width:50px;">#</th>
                                      <th data-field="item_name">Ad Soyad</th>
                                      <th data-field="name">GSM</th>
                                      <th data-field="item_name">Mail</th>
                                      <th data-field="item_name">Başvuru Tipi</th>
                                      <th data-field="item_name">Detay</th>
                                      <th data-field="item_name">CV</th>
                                      <th data-field="operation" style="width:180px;">İşlemler</th>
                                </tr>
                            </thead>

                            <tbody>
                               <%for(var i=0;i<isStaj.length;i++){%>
                                   <tr id="<%=isStaj[i]._id%>">
                                    <td><%=i+1%></td>
                                    <td><%=isStaj[i].adSoyad%></td>
                                    <td><%=isStaj[i].gsm%></td>
                                    <td><%=isStaj[i].email%></td>
                                    <td><%=isStaj[i].basvuruTipi%></td>
                                    <td><%=isStaj[i].detay%></td>
                                    <td><%=isStaj[i].cv%></td>
                                    <td id="<%=isStaj[i]._id%>">
                                        <button class="btn btn-floating red tooltipped sil"  data-position="top" data-delay="50" data-tooltip="Sil"><i class="mdi-action-delete"></i></button>
                                    </td>
                                </tr>
                               <%}%>
                            </tbody>
                        </table>
                  </div>

                </div>
            </div>
        </div>
    </div>


</main>
<% include ../js/lib-js/masterPageScripts.js %>
<script src="../js/lib-js/kariyer.js"></script>