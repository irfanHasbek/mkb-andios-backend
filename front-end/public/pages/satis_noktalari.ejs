<% include ../partial-pages/master.ejs %>
<main>
    <div>
        <div class="row" id="divBayiler">
            <div class="col s12">
                <div class="card-panel">
                   <form id="frmBayiler" action="/bayiler/ekle" method="post">
                   <input style="display:none;" value="<%=session.kullanici.kullaniciKodu%>" name="kullaniciKodu" >
                    <div class="row" id="divBayi">
                       <div class="row">
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctBayiTuru" name="bayiTuru">
                                  <option value="" disabled selected>Bayi \ Servisler Seç</option>
                                  <option value="Bayi & Servis">Bayi & Servis</option>
                                  <option value="Bayi">Bayi</option>
                                  <option value="Servisler">Servis</option>
                                </select>
                            </div>
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctUlke" name="ulkeAdi">
                                  <option value="" disabled selected>Türkiye</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctSehir" name="ilAdi">
                                  <option value="" disabled selected>İl Seç</option>
                                  <%for(var i = 0; i < sehirler.length; i++){%>
                                    <option value="<%=sehirler[i].city%>"><%=sehirler[i].city%></option>
                                  <%}%>
                                </select>
                            </div>
                            <div class="input-field col m6">
                                <select class="browser-default" id="slctIlce" name="ilceAdi">
                                  <option value="" disabled selected>İlçe Seçiniz</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpAd" type="text" class="validate" name="ad" placeholder="bayi Adı">

                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpAdres" type="text" class="validate" name="adres" placeholder="Bayi Adresi">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpTel" type="number" class="validate" name="tel" placeholder="Telefon">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpFax" type="number" class="validate" name="fax" placeholder="fax">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpEmail" type="email" class="validate" name="email" placeholder="E-mail" >
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m12">
                                  <input id="inpWeb" type="text" class="validate" name="web" placeholder="Web Adresi">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="txtAciklama" class="materialize-textarea" name="aciklama" placeholder="Açıklama"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="inpLat" type="text" class="validate" placeholder="Latitude" name="latitude">
                            </div>
                            <div class="input-field col s6">
                                <input id="inpLong" type="text" class="validate" placeholder="Longtitude" name="longtitude">
                            </div>
                        </div>
                        <div class="row">
                            <div class="right-align">
                                <a id="btnGetir" class="waves-effect waves-light btn">Getir</a>
                            </div>
                        </div>
                        <div class="row">
                          <iframe id="ifrmMap" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3542737.1190984747!2d35.540471516363652!3d37.58835301703368!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2s!4v1440081198158" width="100%"  height="350" frameborder="0" style="border:0"></iframe>
                        </div>

                        <div class="row">
                            <div class="right-align">
                                <button id="btnEkle" class="waves-effect waves-light btn" type="submit">Ekle</button>
                            </div>
                        </div>
                    </div>
                  </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="card-panel">
                    <div class="row">
                        <table class="bordered bayilerTable">
                            <thead>
                              <tr>
                                  <th data-field="id" style="width:50px;">#</th>
                                  <th data-field="name">Bayi</th>
                                  <th data-field="item_name">İl</th>
                                  <th data-field="item_name">İlçe</th>
                                  <th data-field="item_name">Ad</th>
                                  <th data-field="item_name">Adres</th>
                                  <th data-field="item_name">Telefon</th>
                                  <th data-field="item_name">Fax</th>
                                  <th data-field="item_name">Mail</th>
                                  <th data-field="item_name">Web</th>
                                  <th data-field="operation" style="width:180px;">İşlemler</th>
                              </tr>
                            </thead>

                            <tbody>
                               <%for(var i=0;i<bayiler.length;i++){%>
                                   <tr id='<%=bayiler[i]._id%>'>
                                       <td><%=i+1%>.</td>
                                       <td><%=bayiler[i].bayiTuru%></td>
                                       <td><%=bayiler[i].ilAdi%></td>
                                       <td><%=bayiler[i].ilceAdi%></td>
                                       <td><%=bayiler[i].ad%></td>
                                       <td><%=bayiler[i].adres%></td>
                                       <td><%=bayiler[i].tel%></td>
                                       <td><%=bayiler[i].fax%></td>
                                       <td><%=bayiler[i].email%></td>
                                       <td><%=bayiler[i].web%></td>
                                       <td id="<%=bayiler[i]._id%>" >
                                         <button class="btn btn-floating red tooltipped sil"  data-position="top" data-delay="50" data-tooltip="Sil"><i class="mdi-action-delete"></i></button>
                                        <button class="btn btn-floating green tooltipped guncelle"  data-position="top" data-delay="50" data-tooltip="Değiştir"><i class="mdi-av-replay"></i></button>
                                       </td>
                                    </tr>
                               <%}%>
                            </tbody>
                        </table>
                  </div>

                </div>
            </div>
        </div>
    </div>

</main>
<% include ../js/lib-js/masterPageScripts.js %>

<script src="../js/lib-js/bayiler.js"></script>
